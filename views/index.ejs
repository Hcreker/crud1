<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>Lista de Usuários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="jumbotron mt-3">
            <div class="row">
                <h2>NODE - CRUD <span class="badge text-bg-secondary">v2.0.0</span></h2>
            </div>
        </div>

        <!-- Botão "Adicionar" visível apenas para admin -->
        <% if (role==='admin' ) { %>
            <div class="row my-3">
                <a class="btn btn-success" href="/add">Adicionar</a>
            </div>
            <% } %>

                <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">NOME</th>
                                <th scope="col">FONE</th>
                                <th scope="col">ENDEREÇO</th>
                                <th scope="col">EMAIL</th>
                                <th scope="col">AÇÃO</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <%= user.id %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.fone %>
                                    </td>
                                    <td>
                                        <%= user.endereco %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <% if (role==='admin' ) { %>
                                            <a class="btn btn-primary btn-sm" href="/edit/<%= user.id %>">Editar</a>
                                            <a class="btn btn-danger btn-sm" href="/dell/<%= user.id %>">Excluir</a>
                                            <% } else { %>
                                                <span class="text-muted">Somente leitura</span>
                                                <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
    </div>
</body>

</html>